---
let { placeholder } = Astro.props;
---

<div>
  <div class="mt-0 max-w-xs pb-4">
    <input
      type="text"
      name="search-input"
      id="search-input"
      class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 dark:text-gray-50 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 dark:placeholder:text-gray-200 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6"
      placeholder={placeholder}
      value=""
    />
  </div>
</div>
